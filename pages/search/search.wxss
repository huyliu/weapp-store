.search{
    padding: 20rpx;
    background: white;
}
.search input {
    width: 600rpx;
    background: #fff;
    border: 2rpx solid #d7d7d7;
    font-size: 12px;
    padding:13rpx 20rpx;
    /*margin-right: 5px;*/
}

.search button{
    line-height:30px;
    padding: 20rpx 0;
    height: 80rpx;
    width: 110rpx;
    background-color: #fd7212;
    border-radius: unset;
}
.search button::after{
    content: none;
}
.searchcion{
    width: 24px;
    height: 24px;
    text-align: center
}
